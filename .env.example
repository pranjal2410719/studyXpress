# StudyXpress Environment Variables
# Copy this file to .env.local and fill in your actual values

# Application Configuration
NEXT_PUBLIC_APP_NAME=StudyXpress
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_VERSION=1.0.0

# Environment
NODE_ENV=development

# Database Configuration (when implemented)
# DATABASE_URL=postgresql://username:password@localhost:5432/studyxpress
# DATABASE_POOL_SIZE=10

# Authentication (when implemented)
# NEXTAUTH_URL=http://localhost:3000
# NEXTAUTH_SECRET=your-secret-key-here
# JWT_SECRET=your-jwt-secret-here

# OAuth Providers (when implemented)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# Email Configuration (when implemented)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# FROM_EMAIL=noreply@studyxpress.com

# File Upload Configuration (when implemented)
# UPLOAD_MAX_SIZE=10485760
# ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png
# CLOUDINARY_CLOUD_NAME=your-cloudinary-name
# CLOUDINARY_API_KEY=your-cloudinary-key
# CLOUDINARY_API_SECRET=your-cloudinary-secret

# Payment Gateway (when implemented)
# STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
# STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
# STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Analytics (when implemented)
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# MIXPANEL_TOKEN=your-mixpanel-token

# External APIs (when implemented)
# OPENAI_API_KEY=your-openai-api-key
# GEMINI_API_KEY=your-gemini-api-key

# Redis Configuration (when implemented)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password

# Monitoring and Logging
# SENTRY_DSN=your-sentry-dsn
# LOG_LEVEL=info

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_CHAT=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=false

# Development Settings
NEXT_TELEMETRY_DISABLED=1
ANALYZE=false
